<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".presentation.listHabit.SortAndSearchFragment">

    <TextView
        android:id="@+id/textView_sortAndSearch_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_text_size"
        android:gravity="center_horizontal"
        android:layout_marginVertical="7dp"
        android:text="@string/db_order" />

    <Spinner
        android:id="@+id/spinner_sortAndSearch_sort"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <EditText
        android:id="@+id/editText_sortAndSearch_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/db_like"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

</LinearLayout>